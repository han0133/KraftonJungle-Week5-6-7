{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Configure",
      "type": "shell",
      "command": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug",
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    },
    {
      "label": "CMake: Build",
      "type": "shell",
      "command": "cmake --build build --config Debug",
      "group": "build",
      "dependsOn": "CMake: Configure",
      "problemMatcher": []
    },
    {
      "label": "Run tests (ctest)",
      "type": "shell",
      "command": "ctest --test-dir build --verbose",
      "group": "test",
      "problemMatcher": []
    }
  ]
}